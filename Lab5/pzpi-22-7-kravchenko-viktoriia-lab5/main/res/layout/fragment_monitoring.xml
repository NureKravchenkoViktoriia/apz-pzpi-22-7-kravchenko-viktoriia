<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:text="@string/select_period" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <DatePicker android:id="@+id/startDatePicker" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <DatePicker android:id="@+id/endDatePicker" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnShowData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_data"
        android:background="#FF6200EE"
        android:textColor="#FFFFFF"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="16dp"
        android:background="#FFFFE0" />

</LinearLayout>
</ScrollView>